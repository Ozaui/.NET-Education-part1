@model List<Course>


  @foreach(var course in Model) {
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4"><img src="~/img/@course.Image" class="img-fluid rounded-start"></div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title">@course.Title</h3>
          <p>@course.Description</p>
        </div>
      </div>
    </div>
  </div>
  }