@model Course
<main>
  <h1>Course Index Page</h1>
  <div class="card mb-3" id="@Model.Id">
    <div class="row">
      <div class="col-md-4">
        <img src="~/img/@Model.Image" class="img-fluid rounded-start">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title">@Model.Title</h3>
          <p>@Model.Description</p>
          <p class="bg-primary" style="display: inline-block;">@Model.Id</p>
        </div>
      </div>
    </div>
  </div>
</main>